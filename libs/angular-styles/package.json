{
  "$schema": "../../node_modules/ng-packagr/package.schema.json",
  "name": "@beeman/angular-styles",
  "version": "0.4.0",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "dependencies": {
    "bootstrap": "^4.0.0",
    "bootswatch": "^4.0.0",
    "font-awesome": "^4.7.0"
  },
  "ngPackage": {
    "whitelistedNonPeerDependencies": ["."],
    "lib": {
      "entryFile": "index.ts",
      "styleIncludePaths": [
        "./src/styles"
      ]
    },
    "dest": "../../dist/libs/angular-styles"
  }
}
