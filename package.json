{
  "name": "@beeman/angular-project-demo",
  "version": "0.1.1",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:libs && npm run build:apps",
    "build:apps": "ng build --app demo --prod",
    "build:libs": "npm run build:libs:angular-about && npm run build:libs:angular-home && npm run build:libs:angular-styles && npm run build:libs:angular-ui ",
    "build:libs:angular-about": "ng-packagr -p libs/angular-about/package.json",
    "build:libs:angular-home": "ng-packagr -p libs/angular-home/package.json",
    "build:libs:angular-styles": "ng-packagr -p libs/angular-styles/package.json",
    "build:libs:angular-ui": "ng-packagr -p libs/angular-ui/package.json",
    "postbuild:libs:angular-styles": "npx cpx 'libs/angular-styles/src/scss/**/*.scss' dist/libs/angular-styles/scss",
    "test": "ng test",
    "lint": "./node_modules/.bin/nx lint && ng lint",
    "e2e": "ng e2e",
    "affected:apps": "./node_modules/.bin/nx affected apps",
    "affected:build": "./node_modules/.bin/nx affected build",
    "affected:e2e": "./node_modules/.bin/nx affected e2e",
    "affected:dep-graph": "./node_modules/.bin/nx affected dep-graph",
    "format": "./node_modules/.bin/nx format write",
    "format:write": "./node_modules/.bin/nx format write",
    "format:check": "./node_modules/.bin/nx format check",
    "update": "./node_modules/.bin/nx update",
    "update:check": "./node_modules/.bin/nx update check",
    "update:skip": "./node_modules/.bin/nx update skip",
    "workspace-schematic": "./node_modules/.bin/nx workspace-schematic",
    "dep-graph": "./node_modules/.bin/nx dep-graph",
    "postinstall": "./node_modules/.bin/nx postinstall",
    "release": "standard-version --commit-all",
    "prepublish": "npm run build",
    "publish": "node ./.scripts/publish"
  },
  "libs": [
    "angular-about",
    "angular-home",
    "angular-styles",
    "angular-ui"
  ],
  "standard-version": {
    "scripts": {
      "postbump": "node ./.scripts/release && git add ."
    }
  },
  "dependencies": {
    "@angular/animations": "5.2.7",
    "@angular/common": "5.2.7",
    "@angular/compiler": "5.2.7",
    "@angular/core": "5.2.7",
    "@angular/forms": "5.2.7",
    "@angular/platform-browser": "5.2.7",
    "@angular/platform-browser-dynamic": "5.2.7",
    "@angular/router": "5.2.7",
    "@ngrx/effects": "5.2.0",
    "@ngrx/router-store": "5.0.1",
    "@ngrx/store": "5.2.0",
    "@ngrx/store-devtools": "5.2.0",
    "@nrwl/nx": "0.11.0",
    "bootstrap": "^4.0.0",
    "bootswatch": "^4.0.0",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "ngrx-store-freeze": "^0.2.1",
    "rxjs": "^5.5.6",
    "viz": "^0.0.1",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "1.7.1",
    "@angular/compiler-cli": "5.2.7",
    "@angular/language-service": "5.2.7",
    "@ngrx/schematics": "5.2.0",
    "@nrwl/schematics": "0.11.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.4.1",
    "prettier": "1.10.2",
    "protractor": "~5.1.2",
    "standard-version": "^4.3.0",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "2.6.2"
  }
}
